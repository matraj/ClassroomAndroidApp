<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="#d7dbd8db">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy Presentation"
        android:id="@+id/easy_button"
        android:layout_marginTop="250dp"
        android:onClick="easyModeClicked"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Presentation"
        android:id="@+id/medium_button"
        android:layout_below="@+id/easy_button"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard Presentation"
        android:id="@+id/hard_button"
        android:layout_below="@+id/medium_button"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/radioOption"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Record Me"
            android:id="@+id/radioRecord"
            android:checked="true"
            android:padding="5dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rbtn_selector"
            android:textColor="@drawable/rbtn_textcolor_selector" />

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Recognize Me"
            android:id="@+id/radioRecognize"
            android:checked="false"
            android:padding="5dp"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/rbtn_selector"
            android:textColor="@drawable/rbtn_textcolor_selector" />
    </RadioGroup>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutePicker"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondPicker"

        android:layout_marginTop="60dp"
        android:layout_marginLeft="200dp"
        />
    <!--android:descendantFocusability="blocksDescendants"-->
</RelativeLayout>